<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
    <%# Simple form is designed to work with your models! %>
    <%# when creating form not attached with models, go with FORM_WITH %>
      <%= form_with url: movies_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query], #=> is to keep what was searched in the input!
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
        <% if @movies.any? %>
          <% @movies.each do |movie| %>
            <h4><%= movie.title %></h4>
            <p><%= movie.synopsis %></p>
            <p><small><%= movie.director.first_name %> <%= movie.director.last_name %></small></p>
          <% end %>
        <% else %>
          <em>Sorry, no movies found.</em>
        <% end %>
      </div>
    </div>
  </div>
</div>
